    <script>
                document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');

            // Função para remover a classe 'active' de todos os links
            function removeActiveClasses() {
                navLinks.forEach(link => {
                    link.classList.remove('active');
                });
            }

            // Função para definir o link ativo
            function setActiveLink(page) {
                removeActiveClasses();
                const activeLink = document.querySelector(`.nav-link[data-page="${page}"]`);
                if (activeLink) {
                    activeLink.classList.add('active');
                }
            }

            // Verifica a URL da página atual e ajusta o link ativo
            const currentPath = window.location.pathname.toLowerCase();
            if (currentPath.includes('about')) {
                setActiveLink('about');
            } else if (currentPath.includes('section1')) {
                setActiveLink('section1');
            } else if (currentPath.includes('contato')) {
                setActiveLink('contato');
            } else {
                setActiveLink('home'); // Página inicial padrão
            }

            // Detecta o clique em links para seções internas e aplica a classe 'active'
            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    const page = link.getAttribute('data-page');
                    setActiveLink(page);
                });
            });
        });

    </script>
